s0nard(){ 
  AUSER=`whoami`;if [ ! -n "$2" ]; then AUSER=$AUSER
  else AUSER=$2;fi;echo "s0nard: $1 ($AUSER)"

  if [[ "$1" == "start" ]];then
    s0nard real $AUSER  2>&1 > /dev/null &
    exit

  elif [[ "$1" == "stop" ]];then
    kill `ps aux|awk '/s0nard\ real/{print $2}'`
    exit

  elif [[ "$1" == "restart" ]];then
    kill `ps aux|awk '/s0nard\ real/{print $2}'`
    s0nard real $AUSER 2>&1 > /dev/null &
    exit

  elif [[ "$1" == "real" ]];then
    echo daemonizing

  else 
    echo "Usage: s0nard start USER | stop | restart"
    exit
  fi

  if iptables -L INPUT | grep -q "icmp echo-request LOG level warning"; then
    echo "sonard: iptables rule arleady set" >> /var/log/syslog
  else
    iptables -A INPUT -p icmp --icmp-type echo-request -j LOG
  fi

  while ( true ); do
    tail -f -n0 /var/log/syslog | grep -q PROTO=ICMP && sonar;
  done; }
